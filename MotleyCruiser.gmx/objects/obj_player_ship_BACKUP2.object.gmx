            <string>/// Shoot a bullet
if(shooting &amp;&amp; energy_current&gt;0 &amp;&amp; !global.paused){
    
    for(var g=0; g&lt;array_length_1d(guns);g++){
        var guntrack = guns[g];
        
        if(current_time&gt;guntrack[0]){
            var gmod = modules[guntrack[1]];
            var offsets = gmod[MODULE_GUN_OFFSETS];
            var gundata = gmod[MODULE_TYPE_DATA];
            var d = offsets[0];
            var a = offsets[1];
        
            bullet = instance_create(x + lengthdir_x(d, image_angle + a),y + lengthdir_y(d, image_angle + a),obj_laser);
            bullet.type=faction;
            bullet.sprite_index = gundata[GUN_SPRITE];
            bullet.depth = -200;
            bullet.direction = image_angle;
            bullet.image_angle = image_angle;
            bullet.speed = 10;
            bullet.damage = gundata[GUN_DAMAGE];

            
            //audio_play_sound(snd_pulse1,1,false);
            
            energy_current -= 2;
            if(energy_current &lt; 0){
                energy_current = 0;
            }
            
            guntrack[0]=current_time + (room_speed * gundata[GUN_SPEED]);
            guns[g]=guntrack;
            
            audio_play_sound_at(snd_laser3,x,y,0,100,100,1,false,2);
        }
        
    }
    
    
    

}

alarm[0] = room_speed * weapon_speed;
