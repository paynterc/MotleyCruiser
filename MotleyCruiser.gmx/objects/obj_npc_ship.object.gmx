            <kind>1</kind>
            <string>/// Turn and Move
if(global.paused){
    if(speed != 0){
        saved_speed = speed;
        speed = 0;
    }
    exit;
}else{
    if(saved_speed != noone){
        speed = saved_speed;
        saved_speed = noone;
    } 
}

thrusting_fwd=false;

var dd;// Angle diference

if(can_move){
    switch (mode)
    {
        case MODE_WAITING:
            // do nothing
            break;
        case MODE_FOLLOWING:
        
            if(target!=noone){
                
                if(tgt_dist&lt;200){
                    dd = angle_difference(target.image_angle, image_angle);
                    image_angle += sin(degtorad(dd)) * turn_spd;             
                    speed = target.speed;
                    thrusting_fwd=false;  
                }else{
                    angleDiff = scr_gradually_rotate_5(id,target.x,target.y,turn_spd);
                    motion_add(image_angle,acc_spd_fwd);
                    thrusting_fwd=true;
                }
            
            }

        
            break;
            
        case MODE_REFUELING:
        
            if(target!=noone){
                
                if(tgt_dist&lt;128){
                    dd = angle_difference(target.image_angle, image_angle);
                    image_angle += sin(degtorad(dd)) * turn_spd;             
                    speed = target.speed;
                    thrusting_fwd=false;
                    scr_ev_refuel_start(target,id);
                    mode = MODE_FOLLOWING;
                }else{
                    angleDiff = scr_gradually_rotate_5(id,target.x,target.y,turn_spd);
                    motion_add(image_angle,acc_spd_fwd);
                    thrusting_fwd=true;
                }
            
            }

        
            break;
            
        case MODE_DEFENDING:
        
            if(target == obj_player_ship){
                if(tgt_dist&lt;200){
                    dd = angle_difference(target.image_angle, image_angle);
                    image_angle += sin(degtorad(dd)) * turn_spd;             
                    speed = target.speed;
                    thrusting_fwd=true;  
                }else{
                    angleDiff = scr_gradually_rotate_5(id,target.x,target.y,turn_spd);
                    motion_add(image_angle,acc_spd_fwd);
                    thrusting_fwd=true;
                }   
            }else{
                if(target != noone){
                    angleDiff = scr_gradually_rotate_5(id,target.x,target.y,turn_spd);
                    if(tgt_dist &gt; 300){
                        //Stop accelerating when we get close      
                        motion_add(image_angle,acc_spd_fwd);
                        thrusting_fwd=true;
                    } 
                }
       
            }
    
            break;
        
        case MODE_TRAVELING:
            if(target != noone){
                angleDiff = scr_gradually_rotate_5(id,target.x,target.y,turn_spd);
            }

            motion_add(image_angle,acc_spd_fwd);
            thrusting_fwd=true;
            
            break;
            
        case MODE_PATROLING:
            
            if(tgt_dist&lt;200){
                waypoint_index ++;
                if( waypoint_index &gt;= array_length_1d(waypoints) ){
                    waypoint_index = 0;
                }
                waypoint_current = waypoints[waypoint_index];
            }
        
            
            if(waypoint_current != noone){
                angleDiff = scr_gradually_rotate_5(id,waypoint_current[0],waypoint_current[1],turn_spd);
            }

            motion_add(image_angle,acc_spd_fwd);
            thrusting_fwd=true;
            
            break;
            
            
        default:
            /// Attacking
            
            if( avoiding &amp;&amp; is_array(waypoint_current) ){
                // Swerve. Cancel this in an alarm.
                angleDiff = scr_gradually_rotate_5(id,waypoint_current[0],waypoint_current[1],turn_spd);
                motion_add(image_angle,acc_spd_fwd);
            }else{
                if(target != noone){
                    angleDiff = scr_gradually_rotate_5(id,target.x,target.y,turn_spd);
                }
                if(target != noone &amp;&amp; tgt_dist &gt; 300){
                    //Stop accelerating when we get close      
                    motion_add(image_angle,acc_spd_fwd);
                    thrusting_fwd=true;
                }
            }
  
            break;
    }               
}


if(speed &gt; max_spd_fwd){
    speed = max_spd_fwd;
}

